---
import Layout from "../layouts/Layout.astro";
import Contact from "../components/Contact.astro";
const title = "Contacto — Capalsa";
const description = "Sourcing y abastecimiento para empresas. Cuéntanos tu requerimiento.";
---
<Layout title={title} description={description}>
  <section class="min-h-[40vh] bg-black text-white px-8 lg:px-12 pt-24 md:pt-28 pb-16">
    <div class="mx-auto max-w-7xl">
      <h1 class="text-4xl md:text-6xl font-bold tracking-tight leading-[1.1]">
        SOURCING PARA EMPRESAS
      </h1>
      <p class="mt-6 text-neutral-300 max-w-2xl">
        Dinos qué necesitas (cantidad, especificaciones y tiempos). Nosotros lo conseguimos y lo surtimos.
      </p>
    </div>
  </section>
  <Contact />
</Layout>
